     <servlet-class>com.mvc.controler.LogoutServlet</servlet-class>
 </servlet>
 
 
 <servlet-mapping>
     <servlet-name>LogoutServlet</servlet-name>
     <url-pattern>/LogoutServlet</url-pattern>
 </servlet-mapping>
 
 
 
 
